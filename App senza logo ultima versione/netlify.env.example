# Netlify Environment Variables Configuration
# Copy this file to .env.local for local development
# Configure these variables in Netlify Dashboard > Site Settings > Environment Variables

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# App Configuration
VITE_APP_NAME=HUB Nazionale Capitanerie di Porto
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_UPLOAD_SIZE=52428800

# Security Configuration
VITE_ENABLE_2FA=false
VITE_SESSION_TIMEOUT=3600000
VITE_REFRESH_TOKEN_INTERVAL=300000

# Performance Configuration
VITE_CACHE_DURATION=300000
VITE_DEBOUNCE_DELAY=300
VITE_THROTTLE_DELAY=1000

# Development Configuration (only for local development)
# VITE_DEBUG_MODE=true
# VITE_MOCK_API=false
# VITE_LOG_LEVEL=debug
